{
  "compilerOptions": {
     "target": "es2016",
     "module": "CommonJS",
     "typeRoots": ["src/@types", "node_modules/@tcdypes"],
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "strict": true,
     "exactOptionalPropertyTypes": true
   },
   "include": [
      "src/**/*.ts", 
      "src/logic/*", 
      "src/middlewares/*",
      "src/middlewares/developers/*",  
      "src/middlewares/projects/*",  
      "src/interfaces/*",
      "src/logic/developers/*",
      "src/logic/projects/*",
      "src/scripts/*",
      "src/routes/*",
      "@types/express/*"
    ],
   "exclude": ["node_modules/"]
 }